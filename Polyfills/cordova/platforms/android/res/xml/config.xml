<?xml version='1.0' encoding='utf-8'?>
<widget id="pete.and.rob" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="NetworkStatus">
        <param name="android-package" value="org.apache.cordova.networkinformation.NetworkManager" />
        <param name="onload" value="true" />
    </feature>
    <feature name="HostedWebApp">
        <param name="android-package" value="com.manifoldjs.hostedwebapp.HostedWebApp" />
        <param name="onload" value="true" />
    </feature>
    <feature name="NetworkStatus">
        <param name="android-package" value="org.apache.cordova.networkinformation.NetworkManager" />
    </feature>
    <allow-intent href="market:*" />
    <icon density="hdpi" src="/assets/icons/icon-72x72.png" />
    <icon density="xhdpi" src="/assets/icons/icon-96x96.png" />
    <icon density="xxhdpi" src="/assets/icons/icon-144x144.png" />
    <icon density="xxxhdpi" src="/assets/icons/icon-192x192.png" />
    <name>Pete and Rob</name>
    <description>
        Pete and Rob's adventures
    </description>
    <author email="mrtz.ngbr@googlemail.com" href="http://cordova.io">
        Moritz Neugebauer
    </author>
    <content src="https://pwa.peteandrob.com/" />
    <access origin="*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="Fullscreen" value="false" />
    <allow-navigation hap-rule="yes" href="https://pwa.peteandrob.com/*" />
</widget>
