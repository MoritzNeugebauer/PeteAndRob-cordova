<?xml version='1.0' encoding='utf-8'?>
<widget id="pwa.peteandrob.com" version="2.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Pete and Rob</name>
    <description>
        Adventures of Pete and Rob
    </description>
    <author email="mrtz.ngbr@googlemail.com" href="https://moritzneugebauer.de">
        Moritz Neugebauer
    </author>
    <content src="https://pwa.peteandrob.com/" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="hdpi" src="/assets/icons/icon-72x72.png" />
        <icon density="xhdpi" src="/assets/icons/icon-96x96.png" />
        <icon density="xxhdpi" src="/assets/icons/icon-144x144.png" />
        <icon density="xxxhdpi" src="/assets/icons/icon-192x192.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="72" src="/assets/icons/icon-72x72.png" width="72" />
        <icon height="144" src="/assets/icons/icon-144x144.png" width="144" />
        <icon height="152" src="/assets/icons/icon-152x152.png" width="152" />
    </platform>
    <preference name="Fullscreen" value="false" />
    <allow-navigation hap-rule="yes" href="https://pwa.peteandrob.com/*" />
    <platform name="windows">
    </platform>
    <platform name="wp8">
    </platform>
</widget>
